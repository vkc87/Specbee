{#
/**
* @file
* Theme overide to display a block.
*
*/
#}
<div class="time-container">
  <div class="site-location">
    <span>{{"Site Location and Time:"}}
    {% if data.country %}
      <span class="country">
        {{'Country'|t }} {{ data.country }}
      </span>
    {% endif %}
    {% if data.city %}
      <span class="city">
        {{'City'|t }} {{ data.city }}
      </span>
    {% endif %}
    {% if data.time %}
      <span class="time">
        {{ data.time }}
      </span>
    {% endif %}
  </div>
</div>